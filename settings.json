/* {
    // on thakle sobdo hoi + ward wrap kaj kore na 
    "editor.accessibilitySupport": "off",
} */
{
  "editor.fontLigatures": true,
  "workbench.tree.indent": 20,
  "editor.fontSize": 22,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.lineHeight": 1.5, //2.0 || 2.5 || 32
  "editor.fontWeight": "normal",
  "editor.cursorStyle": "line",
  "terminal.external.linuxExec": "xterm",
  "workbench.iconTheme": "vscode-icons",
  "editor.wordWrap": "on",
  // editor
  "editor.fontFamily": "\"Fira Code\",\"JetBrains Mono\",\"mononoki Nerd Font\",Script12 BT, Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 1,
  "editor.accessibilitySupport": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic",
          // "fontFamily": "Script12 BT"
        }
      }
    ],
    "comments": "#9dff0084",
  },
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.organizeImports": "explicit",
    "source.fixAll": "always"
  },
  //terminal
  "terminal.integrated.fontSize": 20,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "\"JetBrains Mono\",\"Fira Code\",\"mononoki Nerd Font\",Script12 BT, Menlo, Monaco, 'Courier New', monospace",
  "workbench.colorCustomizations": {
    // terminal customization
    "terminal.background": "#00061f",
    "terminal.foreground": "#fffafa",
  },
  // Others
  "files.autoSave": "onFocusChange",
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "workbench.editor.wrapTabs": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.allowForcePush": true,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.foldingMaximumRegions": 5000,
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "tailwindCSS.emmetCompletions": true,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.startupEditor": "none",
  "editor.fontVariations": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.openRepositoryInParentFolders": "always",
  "tabnine.experimentalAutoImports": true,
  "editor.formatOnType": true,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.mouseWheelZoom": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "cSpell.userWords": [
    "Ahamad",
    "Baitul",
    "Hikmah",
    "Hosen",
    "Natore",
    "Salman",
    "Shahriyar",
    "Sunnah"
  ],
  "editor.minimap.showSlider": "always",
  "workbench.colorTheme": "Baitul Hikmah Professional",
  "git.ignoreRebaseWarning": true,
  "window.menuBarVisibility": "compact",
  "editor.unicodeHighlight.allowedCharacters": {
    "Ô∏è": true
  },
  "html.format.wrapLineLength": 80,
  "gitlens.graph.minimap.enabled": false,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "cnObj",
    "myClass",
    "customClass"
  ],
  "window.density.editorTabHeight": "compact",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.sideBar.location": "left",
  "terminal.integrated.env.windows": {},
  "console-ninja.featureSet": "Community",
  "gitlens.ai.experimental.provider": "openai",
  "gitlens.ai.experimental.openai.model": "gpt-4-1106-preview",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "files.saveConflictResolution": "overwriteFileOnDisk",
  "sherlock.userId": "0292d3b5-0d56-4722-988c-4be10516e2f3",
  "window.titleBarStyle": "custom",
  "i18n-ally.ignoredLocales": [],
  "i18n-ally.dirStructure": "auto",
  "settingsSync.ignoredSettings": [
    "i18n-ally.displayLanguage"
  ],
  "prisma.showPrismaDataPlatformNotification": false,
}
