// Main
{
  // editor
  "editor.fontFamily": "JetBrains Mono, Fira Code",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontSize": 24,
  "editor.wordWrap": "on",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 2,
  "editor.minimap.showSlider": "always",
  "editor.accessibilitySupport": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  // config related to code formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,
  //terminal
  "terminal.integrated.fontSize": 20,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, MesloLGL Nerd Font, JetBrains Mono",
  // terminal customization
  "workbench.colorCustomizations": {
    "terminal.background": "#00061f",
    "terminal.foreground": "#fffafa",
    "terminalCursor.background": "#A89984",
    "terminalCursor.foreground": "#A89984",
    "terminal.ansiBlack": "#1D2021",
    "terminal.ansiBlue": "#0D6678",
    "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#0D6678",
    "terminal.ansiBrightCyan": "#8BA59B",
    "terminal.ansiBrightGreen": "#95C085",
    "terminal.ansiBrightMagenta": "#8F4673",
    "terminal.ansiBrightRed": "#FB543F",
    "terminal.ansiBrightWhite": "#FDF4C1",
    "terminal.ansiBrightYellow": "#FAC03B",
    "terminal.ansiCyan": "#8BA59B",
    "terminal.ansiGreen": "#95C085",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#FB543F",
    "terminal.ansiWhite": "#A89984",
    "terminal.ansiYellow": "#FAC03B"
  },
  // Others
  "files.autoSave": "onFocusChange",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "workbench.editor.wrapTabs": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.allowForcePush": true,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.foldingMaximumRegions": 8000,
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "tailwindCSS.emmetCompletions": true,
  "editor.wordWrapColumn": 100,
  "[markdown]": {
    "editor.wordWrapColumn": 100
  },
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.fontWeight": "normal",
  "workbench.startupEditor": "none",
  "editor.fontVariations": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Material Theme Ocean High Contrast",
  "git.openRepositoryInParentFolders": "always",
  "tabnine.experimentalAutoImports": true,
  "window.menuBarVisibility": "compact",
  "editor.formatOnType": true,
  // PHP specific
  "php.docblock.classSnippet": {
    "@author": "Shahriyar_&_Salman",
    "@copyright": "(c) $CURRENT_YEAR"
  },
  "php.docblock.functionSnippet": {
    "@author": "Shahriyar_&_Salman",
    "@throws": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "emmet.excludeLanguages": [
    "php",
    "markdown"
  ],
  "editor.mouseWheelZoom": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.guides.bracketPairs": "active",
  "editor.cursorStyle": "line",
  "editor.lineHeight": 32
}